extends layout

block content
    #header.page-header
        h1 #{title}
            small 为你轻松下载各个旅行网站的精彩内容
    #message.hide
    #searching.row
        .span6.offset3
            form#search-form.well.form-search.center(action="#", method="post")
                input#input.input-medium.search-query(name="word", required="true", type="text", placeholder="请输入目的地", autofocus="autofocus")
                input#submit.btn.btn-primary(type="submit", value="搜索")
                #sample-travel-targets
                    span.badge.badge-info.travel-target(href="#") 丽江
                    span.badge.badge-info.travel-target(href="#") 九寨沟
                    span.badge.badge-info.travel-target(href="#") 纽约
                    span.badge.badge-info.travel-target(href="#") 巴厘岛
                    span.badge.badge-info.travel-target(href="#") 北京
                    span.badge.badge-info.travel-target(href="#") 成都
                    span.badge.badge-info.travel-target(href="#") 马尔代夫
    #results.row
        #loading.hide
        .row.center
            ul#result-list.span8.offset2.center
        .row.center
            #img-list.span8.offset2.center
    script(src='/javascripts/sp.js')
    footer.row.center LTW @ 豌豆荚Hackday 2012
